package com.example.onlinequizapp;

import androidx.appcompat.app.AppCompatActivity;

import android.app.AlertDialog;
import android.content.Intent;
import android.os.Bundle;
import android.os.CountDownTimer;
import android.widget.Button;
import android.widget.TextView;

import com.google.firebase.auth.FirebaseAuth;
import com.google.firebase.firestore.FirebaseFirestore;

import java.util.HashMap;
import java.util.Map;

public class MainActivity extends AppCompatActivity {

    TextView questionText, timerText, progressText;
    Button ansA, ansB, ansC, ansD, submitBtn, btnLogout;

    String selectedAnswer = "";
    Button selectedButton = null;

    int score = 0;
    int currentQuestionIndex = 0;

    // Subject-based data
    String subject;
    String[] questions;
    String[][] choices;
    String[] correctAnswers;
    int totalQuestion;

    CountDownTimer countDownTimer;

    FirebaseAuth auth;
    FirebaseFirestore db;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        auth = FirebaseAuth.getInstance();
        db = FirebaseFirestore.getInstance();

        // Get subject from SubjectActivity
        subject = getIntent().getStringExtra("subject");

        questions = QuestionAnswer.getQuestions(subject);
        choices = QuestionAnswer.getChoices(subject);
        correctAnswers = QuestionAnswer.getCorrectAnswers(subject);
        totalQuestion = questions.length;

        questionText = findViewById(R.id.question);
        timerText = findViewById(R.id.timerText);
        progressText = findViewById(R.id.progress_text);

        ansA = findViewById(R.id.ans_A);
        ansB = findViewById(R.id.ans_B);
        ansC = findViewById(R.id.ans_C);
        ansD = findViewById(R.id.ans_D);
        submitBtn = findViewById(R.id.submit_btn);
        btnLogout = findViewById(R.id.btnLogout);

        ansA.setOnClickListener(v -> selectAnswer(ansA));
        ansB.setOnClickListener(v -> selectAnswer(ansB));
        ansC.setOnClickListener(v -> selectAnswer(ansC));
        ansD.setOnClickListener(v -> selectAnswer(ansD));

        submitBtn.setOnClickListener(v -> checkAnswer());

        btnLogout.setOnClickListener(v -> {
            auth.signOut();
            startActivity(new Intent(MainActivity.this, LoginActivity.class));
            finish();
        });

        loadQuestion();
    }

    private void selectAnswer(Button button) {
        selectedAnswer = button.getText().toString();
        selectedButton = button;
        resetColors();
        button.setBackgroundColor(getResources().getColor(R.color.pink));
    }

    private void loadQuestion() {
        if (currentQuestionIndex == totalQuestion) {
            finishQuiz();
            return;
        }

        progressText.setText("Question " + (currentQuestionIndex + 1) + " / " + totalQuestion);
        questionText.setText(questions[currentQuestionIndex]);

        ansA.setText(choices[currentQuestionIndex][0]);
        ansB.setText(choices[currentQuestionIndex][1]);
        ansC.setText(choices[currentQuestionIndex][2]);
        ansD.setText(choices[currentQuestionIndex][3]);

        selectedAnswer = "";
        startTimer();
    }

    private void checkAnswer() {
        if (countDownTimer != null) countDownTimer.cancel();

        Button correctButton = null;

        if (ansA.getText().toString().equals(correctAnswers[currentQuestionIndex]))
            correctButton = ansA;
        else if (ansB.getText().toString().equals(correctAnswers[currentQuestionIndex]))
            correctButton = ansB;
        else if (ansC.getText().toString().equals(correctAnswers[currentQuestionIndex]))
            correctButton = ansC;
        else if (ansD.getText().toString().equals(correctAnswers[currentQuestionIndex]))
            correctButton = ansD;

        if (selectedAnswer.equals(correctAnswers[currentQuestionIndex])) {
            score++;
        } else if (selectedButton != null) {
            selectedButton.setBackgroundColor(getResources().getColor(R.color.wrong_red));
        }

        if (correctButton != null)
            correctButton.setBackgroundColor(getResources().getColor(R.color.correct_green));

        submitBtn.postDelayed(() -> {
            currentQuestionIndex++;
            loadQuestion();
        }, 1000);
    }

    private void resetColors() {
        ansA.setBackgroundColor(getResources().getColor(R.color.white));
        ansB.setBackgroundColor(getResources().getColor(R.color.white));
        ansC.setBackgroundColor(getResources().getColor(R.color.white));
        ansD.setBackgroundColor(getResources().getColor(R.color.white));
    }

    private void startTimer() {
        countDownTimer = new CountDownTimer(10000, 1000) {
            @Override
            public void onTick(long millisUntilFinished) {
                timerText.setText("Time Left: " + millisUntilFinished / 1000 + "s");
            }

            @Override
            public void onFinish() {
                checkAnswer();
            }
        }.start();
    }

    private void finishQuiz() {
        String userId = auth.getCurrentUser().getUid();

        Map<String, Object> result = new HashMap<>();
        result.put("subject", subject);
        result.put("score", score);
        result.put("total", totalQuestion);

        db.collection("quiz_results").document(userId).set(result);

        new AlertDialog.Builder(this)
                .setTitle("Quiz Finished")
                .setMessage("Score: " + score + " / " + totalQuestion)
                .setPositiveButton("OK", (dialog, i) -> finish())
                .setCancelable(false)
                .show();
    }
}
